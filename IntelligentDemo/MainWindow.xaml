<Window x:Class="IntelligentDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        WindowState="Maximized"
        Loaded="Window_Loaded"
        Title=".NET AI Showcase" Height="450" Width="800">
    <Grid>
        <DockPanel LastChildFill="True">
            <Grid DockPanel.Dock="Bottom" Height="40" Background="#a6a6a6" Visibility="Collapsed">
                <StackPanel Orientation="Horizontal" Margin="5">
                    <Button Height="20" Width="50" Margin="5" FontSize="10px" Name="Music" Click="Music_Click">Music</Button>
                    <Button Height="20" Width="50" Margin="5" FontSize="10px" Name="Feedback" Click="Feedback_Click">Feedback</Button>
                    <Button Height="20" Width="50" Margin="5" FontSize="10px" Name="Camera" Click="Camera_Click">Camera</Button>
                    <Button Height="20" Width="50" Margin="5" FontSize="10px" Name="Twitter" Click="Twitter_Click">Twitter</Button>

                    <CheckBox VerticalAlignment="Center" Name="SplitScreenCheckbox" Margin="5" Checked="SplitScreenCheckbox_Checked" Unchecked="SplitScreenCheckbox_Unchecked"></CheckBox>
                    <TextBlock VerticalAlignment="Center" FontSize="10px" >Split</TextBlock>
                </StackPanel>
            </Grid>

            <Grid Name="MainGrid" Background="#333333">

            </Grid>
        </DockPanel>

    </Grid>
</Window>
